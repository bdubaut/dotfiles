fresh freshshell/fresh bin/fresh --bin

# Git config
fresh git/gitconfig --file=$HOME/.gitconfig

# Shell
fresh shell/bash_profile.sh --file=$HOME/.bash_profile
fresh shell/bash_aliases.sh --file=$HOME/.bash_aliases

fresh-options --file=$HOME/.bashrc
  fresh shell/mac_completion.sh
  fresh shell/prompt.sh
  fresh shell/path.sh
fresh-options

fresh-options --file=$HOME/.vimrc
  fresh vim/vimrc
  fresh vim/plugins.vim
fresh-options

fresh vim/init.vim --file=$HOME/.config/nvim/init.vim


# Neovim config
